# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $mode_system System (l) lock, (e) logout, (r) reboot, (s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id pkill $Locker && i3-msg exit, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+q mode "$mode_system"


# choose xrandr screen
set $mode_screen Screen (d) dual, (l) laptop
mode "$mode_screen" {
    bindsym d exec --no-startup-id $HOME/.config/i3/display.sh dual, mode "default"
    bindsym l exec --no-startup-id $HOME/.config/i3/display.sh laptop, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+s mode "$mode_screen"
bindsym XF86Display mode "$mode_screen"

# Network manager stuff
bindsym $mod+n exec --no-startup-id nmcli_dmenu

# Screen brightness
bindsym XF86MonBrightnessUp exec $HOME/.config/i3/backlight.sh + && pkill -RTMIN+1 i3blocks # increase screen brightness
bindsym XF86MonBrightnessDown exec $HOME/.config/i3/backlight.sh - && pkill -RTMIN+1 i3blocks # decrease screen brightness


# Volume control
bindsym XF86AudioRaiseVolume exec amixer -- sset Master 10%+ && pkill -RTMIN+2 i3blocks
bindsym XF86AudioLowerVolume exec amixer -- sset Master 10%- && pkill -RTMIN+2 i3blocks
bindsym XF86AudioMute exec amixer Master toggle && pkill -RTMIN+2 i3blocks

